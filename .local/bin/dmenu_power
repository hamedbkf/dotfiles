#!/bin/sh

RET=$(echo -e "lock\nsuspend\nlocknsuspend\nhibernate\nshutdown\nreboot\nlogout\ncancel" | dmenu )

case $RET in
    'lock') setsid -f slock ;;
    'suspend') systemctl suspend ;;
    'locknsuspend') setsid -f slock; systemctl suspend ;;
    'hibernate') setsid -f slock; systemctl hibernate ;;
	'shutdown') sudo shutdown now ;;
	'reboot') sudo reboot ;;
	'logout') pkill -9 Xorg ;;
	*) ;;
esac
